#!/bin/sh
set -eux

# Check environment

fail() {
    echo "$1" 1>&2
    echo "Usage: $(basename "$0") [install|uninstall]" 1>&2
    exit 1
}

if [ "$#" -lt 1 ] ; then
    fail "Invalid number of arguments."
fi

if [ "$(id --user)" -ne 0 ] ; then
    fail "Impossible to prepare the system without root privileges."
fi

if [ "$(uname)" != "Linux" ] ; then
    fail "Impossible to prepare another operating system than Linux."
fi

# Run installer

case $1 in
    install )
        curl --location --output /usr/local/bin/license "https://github.com/timonier/license/raw/master/bin/license"
        chmod +x /usr/local/bin/license
    ;;

    uninstall )
        rm /usr/local/bin/license
    ;;

    * )
        fail "Argument \"$1\" is invalid."
esac
